#-*-conf-*-

###################################################################
# Views
###################################################################

[train-view]

  content = fields series output
  sidebar = flags attrs

###################################################################
# Components
###################################################################

[component "fields"]

  element = guild-fields

[component "series"]

  element = guild-series

  extra_series_templates = \
    op-cpu-percent-series \
    op-memory-series \
    gpu-percent-series \
    gpu-memory-series

[component "output"]

  element = guild-output

[component "flags"]

  element = guild-flags

[component "attrs"]

  element = guild-attrs

[component "artifacts"]

  element = guild-artifacts

###################################################################
# Field templates
###################################################################

[template "accuracy-field"]

  color = green-700
  icon = accuracy
  label = Accuracy
  reduce = last
  format = 0.00%

[template "loss-field"]

  color = red-700
  icon = loss
  label = Loss
  reduce = last
  format = 0.0000

[template "steps-field"]

  color = blue-700
  icon = steps
  label = Steps
  reduce = steps
  format = 0,0

[template "time-field"]

  color = yellow-700
  icon = time
  label = Time
  reduce = duration
  format = 00:00:00

